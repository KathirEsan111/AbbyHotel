    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">Create New Category</a>
        </div>
        
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category name
            </th>
            <th>
                Display Order
            </th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Categories)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="50%">@obj.DisplayOrder</td>
               
                <td><div class="btn-group w-75" role="group">
                    <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i></a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
               
            </tr>

        }

    </tbody>
</table>


