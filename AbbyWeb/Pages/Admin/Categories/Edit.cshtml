@page
@model AbbyWeb.Pages.Admin.Categories.EditModel
<form method="post">
    <input hidden asp-for="@Model.Category.Id" />
    <div class="border p-3 mt-4">
        <h2 class="text-primary pl-3">Edit Category</h2>
        <br />
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="@Model.Category.Name"></label>
            <input type="text" asp-for="@Model.Category.Name" class="form-control" />
            <span asp-validation-for="@Model.Category.Name" class="text-danger"></span> @*can also be written as Category.Name*@
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.DisplayOrder"></label>
            <input type="text" asp-for="@Model.Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="Index" class="btn btn-primary">Back to List</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}